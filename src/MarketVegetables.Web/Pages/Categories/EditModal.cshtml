@page
@using MarketVegetables.Localization
@using MarketVegetables.Web.Pages.Categories
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model EditModalModel
@inject IStringLocalizer<MarketVegetablesResource> L
@{
    Layout = null;
}
<form asp-page="/Categories/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Update"]"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Category.Id" readonly="true"/>
            <abp-input asp-for="Category.CategoryName" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
