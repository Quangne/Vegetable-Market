@page
@using MarketVegetables.Localization
@using MarketVegetables.Web.Pages.Units
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<MarketVegetablesResource> L
@{
    Layout = null;
}
<form asp-page="/Units/CreateModal">
    <abp-modal>
        <abp-modal-header title="New Unit"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Unit.Id" readonly="true"/>
            <abp-input asp-for="Unit.UnitName" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>