@page
@using MarketVegetables.Localization
@using MarketVegetables.Web.Pages.Units
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<MarketVegetablesResource> L
@model IndexModel
@{
}
@section scripts
    {
    <abp-script src="/Pages/Units/Unit.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Units"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewUnitButton"
                            text="@L["New Unit"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>

    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="UnitsTable"></abp-table>
    </abp-card-body>
</abp-card>
